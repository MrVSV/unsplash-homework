<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_onboarding">

    <fragment
        android:id="@+id/navigation_onboarding"
        android:name="com.example.unsplashhomework.presentation.onboarding.OnboardingFragment"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/action_navigation_onboarding_to_navigation_auth"
            app:destination="@id/navigation_auth"
            app:popUpTo="@id/navigation_onboarding"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_auth"
        android:name="com.example.unsplashhomework.presentation.auth.AuthFragment"
        tools:layout="@layout/fragment_authorization" />

    <fragment
        android:id="@+id/navigation_photos"
        android:name="com.example.unsplashhomework.presentation.photos.PhotosFragment"
        android:label="@string/title_photos"
        tools:layout="@layout/fragment_photos" />

    <fragment
        android:id="@+id/navigation_collections"
        android:name="com.example.unsplashhomework.presentation.collections.CollectionsFragment"
        android:label="@string/title_collections"
        tools:layout="@layout/fragment_collections" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.unsplashhomework.presentation.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />
</navigation>